// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl    String
  authorName  String
  heading     String
  description String
  date        DateTime @default(now())
}
