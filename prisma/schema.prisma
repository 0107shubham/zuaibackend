// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Blog {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  authorName  String
  heading     String
  description String
  date        DateTime @default(now())
}
